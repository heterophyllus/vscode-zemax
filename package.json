{
    "name": "vscode-zemax",
    "displayName": "Zemax OpticStudio",
    "description": "Zemax OpticStudio ZPL language support for Visual Studio Code",
    "version": "0.4.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/heterophyllus/vscode-zemax.git"
    },
    "license": "MIT",
    "publisher": "heterophyllus",
    "author": {
        "name": "Hiiragi",
        "email": "heterophyllus.work@gmail.com"
    },
    "icon": "images/icon.jpg",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "Zemax",
        "OpticStudio",
        "ZOS",
        "ZPL"
    ],
    "contributes": {
        "languages": [
            {
                "id": "zemax",
                "aliases": [
                    "Zemax",
                    "zemax"
                ],
                "extensions": [
                    ".zpl",
                    ".ZPL"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "zemax",
                "scopeName": "source.zemax",
                "path": "./syntaxes/zemax.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "zemax",
                "path": "./snippets/zemax.json"
            }
        ]
    }
}
